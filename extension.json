{
	"name": "Spoilers",
	"version": "2.0",
	"author": [
		"Tim \"Telshin\" Aldridge",
		"Kris \"Developaws\" Blair"
	],
	"url": "http://www.mediawiki.org/wiki/Extension:Spoilers",
	"descriptionmsg": "spoilers_description",
	"license-name": "LGPL-3.0",
	"type": "parserhook",
	"requires": {
		"MediaWiki": ">= 1.27.0"
	},
	"MessagesDirs": {
		"Spoilers": [
			"i18n"
		]
	},
	"AutoloadClasses": {
		"Spoilers": "Spoilers.hooks.php"
	},
	"ExtensionMessageFiles": {
		"Spoilers": "Spolers.i18n.magic.php"
	},
	"ResourceModules": {
		"ext.spoilers": {
			"styles": [
				"resources/spoilers.css"
			],
			"scripts": [
				"resources/mw.Spoilers.js"
			],
			"messages": [
				"spoilers_hide_default",
				"spoilers_show_default"
			],
			"targets": [
				"desktop",
				"mobile"
			],
			"dependencies": [
				"mediawiki.jqueryMsg"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "Spoilers"
	},
	"Hooks": {
		"ParserFirstCallInit": [
			"Spoilers::onParserFirstCallInit"
		]
	},
	"manifest_version": 1
}
